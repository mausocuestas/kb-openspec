---
// src/components/overrides/PageTitle.astro
// This component overrides the default Starlight PageTitle to display title and metadata
import DocumentMetadata from '../DocumentMetadata.astro';

// Get frontmatter data for metadata
const frontmatter = Astro.locals.starlightRoute?.entry?.data || {};

// Check if this is the homepage (template: splash) to avoid duplicate title
const isHomepage = frontmatter.template === 'splash';
---

{!isHomepage && (
	<>
		<h1 id="starlight__page-title" class="sl-h1">
			{Astro.locals.starlightRoute.entry.data.title}
		</h1>

		<DocumentMetadata frontmatter={frontmatter} />
	</>
)}

<style>
	@layer starlight.core {
		.sl-h1 {
			view-transition-name: sl-h1;
			margin-top: 1rem;
			font-size: var(--sl-text-h1);
			line-height: var(--sl-line-height-headings);
			font-weight: 600;
			color: var(--sl-color-white);
		}
	}
</style>